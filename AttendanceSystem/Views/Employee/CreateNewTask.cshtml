@model AttendanceSystem.Models.Properties.TaskViewModel


@using AttendanceSystem.Models
@{
    ViewData["Title"] = "CreateNewTask";



}

<style>


    .backgroundWhiteBorder {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        border: 1px solid #ddd;
    }
</style>


<br />
<div class="backgroundWhiteBorder">


    <div class="col-8 ">
        <h2 class="text-info">Dodaj nowe zadanie</h2>
        <br />
        <form asp-action="CreateNewTask">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label class="col-form-label">Wybierz projekt</label>
                </div>
                <div class="col-5">
                    <select class="form-control" asp-for="Zadanies.Idprojektu"
                            asp-items="@(new SelectList(Model.Projekts,"Idprojektu","NazwaProjektu"))">
                    </select>

                    @*<select id="ddlCategorylist" asp-for="NewProjekt.Idpracownika" asp-items="Model.Pracownicy.ToSelectListItem(Model.NewProjekt.Idpracownika)"  class="form-control"></select>*@
                </div>

            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Zadanies.NazwaZadania" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Zadanies.NazwaZadania" class="form-control" />
                </div>
                <span asp-validation-for="Zadanies.NazwaZadania" class="text-danger"></span>

            </div>
            @*<img src="https://cdn.dribbble.com/users/4241563/screenshots/11874468/media/7796309c77cf752615a3f9062e6a3b3d.gif" alt="Girl in a jacket" width="500" height="600">*@
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_CreateTaskOrBack" />
                </div>
            </div>
        </form>

    </div>






</div>

