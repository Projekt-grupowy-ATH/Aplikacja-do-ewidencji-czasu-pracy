@model IEnumerable<Projekt>
@{
    ViewData["Title"] = "UserTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>


    .backgroundWhiteBorder {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        border: 1px solid #ddd;
    }
</style>


<div class="backgroundWhiteBorder">

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Lista projektów</h2>
        </div>

    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.NazwaProjektu)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.NazwaProjektu)
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            @*<partial name="_TableButtonPartial" model="item.Idpracownika" />*@
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>Brak pracowników</p>
        }
    </div>
</div>

