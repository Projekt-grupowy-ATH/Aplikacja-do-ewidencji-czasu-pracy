@model Pracownik
@{
    ViewData["Title"] = "Edit";
}
<style>


    .backgroundWhiteBorder {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        border: 1px solid #ddd;
    }
</style>

<br />
<div class="backgroundWhiteBorder">
    <h2 style="color:black">Edytowanie danych pracownika</h2>
    <br />

    <form method="post" asp-action="CreateNew">
       
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Imie" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Imie" class="form-control" />
            </div>
            <span asp-validation-for="Imie" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nazwisko" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nazwisko" class="form-control" />
            </div>
            <span asp-validation-for="Nazwisko" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Stanowisko" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Stanowisko" class="form-control" />
            </div>
            <span asp-validation-for="Stanowisko" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Uprawnienia" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Uprawnienia" class="form-control" />
            </div>
            <span asp-validation-for="Uprawnienia" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Telefon" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Telefon" class="form-control" />
            </div>
            <span asp-validation-for="Telefon" class="text-danger"></span>
        </div>



        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButton" model="Model.Idpracownika" />
            </div>
        </div>

    </form>
</div>