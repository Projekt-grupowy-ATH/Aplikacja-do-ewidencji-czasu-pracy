@model IEnumerable<EmployeeView>
@{
    ViewData["Title"] = "AllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="backgroundWhiteBorder">

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Lista pracowników</h2>
        </div>
        
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Imie)
                    </th>



                    <th>
                        @Html.DisplayNameFor(m => m.Nazwisko)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Stanowisko)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Uprawnienia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Telefon)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Imie)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Nazwisko)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Stanowisko)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Uprawnienia)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Telefon)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Idpracownika" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>Brak pracowników</p>
        }
    </div>
</div>

